{
  "name": "gemini-diary",
  "version": "1.0.0",
  "description": "AI-powered personal journal",
  "main": "electron-main.js",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "server": "node server.js",
    "electron:dev": "concurrently \"npm run server\" \"wait-on http://localhost:8000 && electron .\"",
    "electron:build": "npm run build && electron-builder",
    "test": "vitest",
    "service:install": "node service-install.js",
    "service:uninstall": "node service-uninstall.js"
  },
  "dependencies": {
    "@google/genai": "^1.30.0",
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "file-saver": "^2.0.5",
    "jszip": "^3.10.1",
    "lucide-react": "^0.344.0",
    "node-windows": "^1.0.0-beta.8",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.22.3",
    "recharts": "^2.12.2",
    "sqlite3": "^5.1.7",
    "swagger-ui-express": "^5.0.0"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.4.2",
    "@testing-library/react": "^14.2.1",
    "@types/file-saver": "^2.0.7",
    "@types/react": "^18.2.64",
    "@types/react-dom": "^18.2.21",
    "@vitejs/plugin-react": "^4.2.1",
    "autoprefixer": "^10.4.18",
    "concurrently": "^8.2.2",
    "electron": "^29.1.0",
    "electron-builder": "^24.13.3",
    "jsdom": "^24.0.0",
    "postcss": "^8.4.35",
    "tailwindcss": "^3.4.1",
    "typescript": "^5.4.2",
    "vite": "^5.1.6",
    "vite-plugin-pwa": "^0.19.2",
    "vitest": "^1.3.1",
    "wait-on": "^7.2.0"
  },
  "build": {
    "appId": "com.geminidiary.app",
    "productName": "Gemini Diary",
    "files": [
      "dist/**/*",
      "server.js",
      "electron-main.js",
      "package.json",
      "swagger.json"
    ],
    "directories": {
      "output": "release"
    }
  }
}